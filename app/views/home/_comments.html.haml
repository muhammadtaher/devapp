%hr/
.container{:id => "comments"}
  %h2 Comments:
  %br/
  - commentable.comments.each do |comment|
    %strong
      = comment.title<<":"
     
    %br/
    .container
      = comment.comment
    %hr/
    %br/
  = form_tag path, remote: true do
    = label_tag :title
    %br/
    = text_field_tag :title
    %br/
    = label_tag :comment
    %br/
    = text_area_tag :comment
    = hidden_field_tag :story_id, commentable.id
    %br/
    = submit_tag "Add comment"