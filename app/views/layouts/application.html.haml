!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title
      = yield(:title)
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .container{:style => "padding-bottom: 3cm;"}
      = render '/nav'
      - if notice
        %p.notice= notice
      - if alert
        %p.alert= alert
      = yield
